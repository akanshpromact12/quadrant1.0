<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:title="@string/app_name"
    android:background="@color/colorPrimary"
    app:layout_scrollFlags="scroll|enterAlways"
    android:popupTheme="@style/AppTheme.PopupOverlay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:contentDescription="@string/backButton"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/groupNamePartOfGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Group Name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adminOfGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/backButton"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@+id/membersOfGrp"
            android:layout_toLeftOf="@+id/membersOfGrp"
            android:text="Admin"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/membersOfGrp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:foregroundGravity="right"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_group" />

        <TextView
            android:id="@+id/NoOfMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="end"
            android:text="4"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>