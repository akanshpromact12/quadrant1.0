<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2d32">

    <android.support.v7.widget.CardView
        android:id="@+id/invitesCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:elevation="3dp"
        card_view:cardBackgroundColor="#2e2d32"
        card_view:cardCornerRadius="2dp"
        card_view:contentPaddingTop="15dp"
        card_view:contentPaddingBottom="15dp">

        <RelativeLayout
            android:id="@+id/invitesLinearLayoutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2e2d32">

            <TextView
                android:id="@+id/inviteeGroupName"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Invite sender name"
                android:layout_marginLeft="@dimen/marginStart"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>